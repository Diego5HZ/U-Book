<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddServiceCompanyUserFragment"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/backgroundIv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="background view"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_example" />

        <RelativeLayout
            android:id="@+id/contentRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backgroundIv"
            android:padding="20dp">

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:text="Place"/>

            <TextView
                android:id="@+id/subTitleTv0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="Description"
                android:layout_below="@id/titleTv"/>

            <View
                android:id="@+id/lineDw0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/subTitleTv0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <!--Description-->
            <TextView
                android:id="@+id/descriptionTil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineDw0"
                android:layout_marginBottom="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subTitleTv1"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionTil"
                android:text="Location" />

            <View
                android:id="@+id/lineDw1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/subTitleTv1"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/locationMps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineDw1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="location view"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/ohChTv"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationMps"
                android:text="Opening/Closing Hours" />

            <View
                android:id="@+id/lineDw2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/ohChTv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <!--Weekdays-->
            <TextView
                android:id="@+id/weekdaysTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineDw2"
                android:text="Weekdays:     9:00 -  18:00"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/weekendTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekdaysTv"
                android:layout_marginBottom="10dp"
                android:text="Weekend:      10:00 - 15:00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/contactUsTv"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekendTv"
                android:text="Contact Us" />

            <View
                android:id="@+id/lineDw3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/contactUsTv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <!--Contact us-->
            <TextView
                android:id="@+id/contactUsTil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineDw3"
                android:text="Telph: +51 978 374 653"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/motivPhrTv"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactUsTil"
                android:text="Motivational Phrase" />

            <View
                android:id="@+id/lineDw4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/motivPhrTv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <!--Motivational Phrase-->

            <TextView
                android:id="@+id/motivPhrTil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineDw4"
                android:text="If you imagine it just don't let it go"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>


            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00E1B7"
                android:layout_below="@id/motivPhrTil"
                android:text="Book"
                android:textColor="@color/black"
                app:strokeWidth="1dp"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>