<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileCompanyUserFragment"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="121dp"
        android:contentDescription="profile pic"
        android:src="@drawable/img_profile_pic"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginTop="45dp"
        android:layout_marginStart="90dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="Active Services"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/lineDw0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activeServicesRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineDw0"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activeServicesRv"
        android:text="Inactive Services"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/lineDw1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inactiveServicesRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineDw1"
        android:orientation="horizontal" />

</RelativeLayout>